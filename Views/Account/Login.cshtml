@model TheWayShop_2._0.ViewModels.LoginViewModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

<div class="container" style="margin-top:10%;align-content:center">
    <a asp-action="Register" asp-controller="Account">Регистрация</a>
    <div class="row">

        <div class="col-md-offset-3 col-md-6">
            <form class="form-horizontal" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <span class="heading">АВТОРИЗАЦИЯ</span>
                <div class="form-group">
                    <label asp-for="Email">Введите Email</label>
                    <input type="text" asp-for="Email" />
                    <span asp-validation-for="Email" />

                </div>
                <div class="form-group help">
                    <label asp-for="Password">Введите пароль</label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" />
                    <i class="fa fa-lock"></i>
                    <a href="#" class="fa fa-question-circle"></a>
                </div>
                <div class="form-group">
                    <div class="main-checkbox">
                        <input type="checkbox" value="none" id="checkbox1" name="check" />
                        <label for="checkbox1"></label>
                    </div>
                    <span class="text">Запомнить</span>
                    <button type="submit" class="btn btn-default">ВХОД</button>
                </div>
            </form>
        </div>
    </div>
</div>